<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_marginTop="-100dp"
        android:id="@+id/headPointsTv"
        android:layout_marginStart="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/headPoints"
        style="@style/Heading1"/>

    <TextView
        android:id="@+id/tailsPointsTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="@string/tailsPoints"
        style="@style/Heading1"/>

    <ImageView
        android:id="@+id/coinImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerInside"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/heads"
        tools:ignore="ContentDescription"/>

    <Button
        android:id="@+id/buttonFlip"
        android:layout_width="160dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="60dp"
        android:background="@color/yellowLemon"
        android:text="@string/buttonText"/>
</LinearLayout>